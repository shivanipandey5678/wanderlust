<%  layout("/layouts/boilerplate") -%>
<body>
    <div class="row">
        <div class="col-8 offset-2">
            <h3 class="mt-3">Edit Listing</h3>
            <form action="/listing/<%= searchList._id %>?_method=PUT" method="post">
                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input name="listing[title]" id="title" type="text" value="<%= searchList.title %>" class="form-control">
                </div>

                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea name="listing[description]" id="description" class="form-control"><%= searchList.description %></textarea>
                </div>

                <div class="mb-3">
                    <label for="image" class="form-label">Image URL</label>
                    <input name="listing[image[url]]" id="image" type="text" value="<%= searchList.image.url %>" class="form-control">
                </div>
                
                <div class="row">
                    <div class="mb-3 col-md-4">
                        <label for="price" class="form-label">Price</label>
                        <input name="listing[price]" id="price" type="number" value="<%= searchList.price %>" class="form-control">
                    </div>
                    
                    <div class="mb-3 col-md-8">
                        <label for="country" class="form-label">Country</label>
                        <input name="listing[country]" id="country" type="text" value="<%= searchList.country %>" class="form-control">
                    </div>
                </div>
                
                <div class="mb-3">
                    <label for="location" class="form-label">Location</label>
                    <input name="listing[location]" id="location" type="text" value="<%= searchList.location %>" class="form-control">
                </div>

                <button class="btn btn-dark create-btn mb-3">Update</button>
            </form>
        </div>
    </div>
</body>
